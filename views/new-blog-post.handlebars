<section>
    <h1 class="color-light">The Tech Blog</h1>
</section>

{{#if loggedIn}}
  <section class="card-wide">
    <header>Create New Post</header>
    <section class="inner-card-wide">
      <form class="form" id="comment-form">
        <div class="form-group font-size-normal"> 


          {{!-- ==>   Resume Here   <== --}}

          
          <label class="margin-text" for="blog-comment">Title</label>
          <input class="form-input" type="text" id="blog-comment" name="blog-comment" rows="8"></input>
        </div>
        <div class="form-group font-size-normal">
          <label class="margin-text" for="blog-comment">Content</label>
          <textarea class="form-input" type="text" id="blog-comment" name="blog-comment" rows="8"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-wide" type="submit">Submit</button>
        </div>
        {{!-- Hidden section - used for storing passed data - Has to be part of the form --}}
        <div>
          <p class="form-group" id="comm-username">{{activeUser}}</p>
        </div>
      </form>
    </section>
  </section>
{{else}}
  <!-- Otherwise, provide a link to login -->
  <a class="color-link margin-text-wide" href="/login">Click here to login to enter or manage comments.</a>
{{/if}}

